doctype html
html
  head
    title user passwd
    meta(content='charset=utf-8')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js')
    script(src='/js/common.js')
    script(src='/js/user/passwd.js')
    link(href='/css/header.css', rel='stylesheet')
  body
    div.header
      include ../header.jade
    div.container
      h1 Change Password Page
      div.passwd-section
        | Current
        input#c-pwd(type='password', autofocus)
        br
        | New
        input#n-pwd(type='password', autofocus)
        br
        | Re-New
        input#rn-pwd(type='password', autofocus)
      button#btn-chpasswd Change Password
      br
      div#status
